{
  "name": "fdc3-sail",
  "private": true,
  "engines": {
    "node": ">=v16.13",
    "npm": ">=8.1"
  },
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "start": "npm run watch",
    "start:directory": "node directory/dist/index.js",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "cd ./packages/main && vite build",
    "build:preload": "cd ./packages/preload && vite build",
    "build:preload:types": "dts-cb -i \"packages/preload/src/**/*.ts\" -o \"packages/preload/exposedInMainWorld.d.ts\"",
    "build:renderer": "cd ./packages/renderer && vite build",
    "build:directory": "cd ./directory && tsc -p tsconfig.json",
    "compile": "cross-env MODE=production npm run build && electron-builder build --config .electron-builder.config.js --dir --config.asar=false",
    "test": "npm run test:main && npm run test:preload && npm run test:renderer && npm run test:e2e",
    "test:e2e": "npm run build && vitest run",
    "test:main": "vitest run -r packages/main",
    "test:preload": "vitest run -r packages/preload",
    "test:renderer": "vitest run -r packages/renderer --passWithNoTests",
    "watch": "node scripts/watch.js --inspect",
    "lint": "eslint --fix . --ext js,ts,tsx",
    "typecheck:main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck:renderer": "npm run build:preload:types && tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck:directory": "tsc --noEmit -p directory/tsconfig.json",
    "typecheck": "npm run typecheck:main",
    "update-versions": "node scripts/update-electron-vendors.js",
    "directory-openapi": "npx openapi-typescript packages/main/src/directory/app-directory-schema-2.0.yml --output packages/main/src/directory/generated-schema.ts"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^14.1.0",
    "@testing-library/jest-dom": "^5.16.1",
    "@types/node": "^18.11.9",
    "@types/react": "^18.2.31",
    "@types/react-dom": "^18.2.14",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@vitejs/plugin-react": "^1.1.3",
    "autoprefixer": "^10.4.13",
    "cross-env": "^7.0.3",
    "dts-for-context-bridge": "^0.7.1",
    "electron": "^26.2.1",
    "electron-builder": "^24.2.1",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.33.2",
    "jsdom": "^19.0.0",
    "nano-staged": "^0.5.0",
    "openapi-typescript": "^5.4.1",
    "playwright": "^1.19.2",
    "postcss": "^8.4.19",
    "prettier": "^2.8.0",
    "rollup-plugin-tsconfig-paths": "^1.4.0",
    "simple-git-hooks": "^2.7.0",
    "tailwindcss": "^3.2.4",
    "typescript": "4.8.4",
    "vite": "^3.2.4",
    "vitest": "^0.25.3"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "fdc3-2.0": "npm:@finos/fdc3@^2.0.0-beta.4",
    "fdc3-1.2": "npm:@finos/fdc3@^1.2.0",
    "@fontsource/roboto": "^4.5.3",
    "@mui/icons-material": "^5.10.15",
    "@mui/lab": "^5.0.0-alpha.109",
    "@mui/material": "^5.14.14",
    "@uiw/react-markdown-preview": "^4.1.5",
    "electron-fetch": "^1.7.4",
    "electron-updater": "^6.1.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
